{% extends 'base.html.twig' %}
{% block head %}
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% trans %} UserProfile {% endtrans %} {% endblock %}</title>
</head>
{% endblock %}


{% block body %}
    <section id="intro">

        <div class="intro-container wow fadeIn">

        </div>
    </section>

    <section id="schedule" class="section-with-bg">
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6">
                    <h1>{{ user.lastName }} {{ user.firstName }}</h1>
                </div>
                <div class="col-md-6">
                    <h1>{{ user.email }}</h1>
                    <h2>{{ user.username }}</h2>
                </div>
            </div>

            <div class="container mt-4">
                <div class="row">
                    <div class="col-lg-6">
                        <h2> {% trans %} Meetings {% endtrans %} </h2>

                        {% for meeting in user.meetings %}
                            <table class="table table-striped">
                                <tr>
                                    <td>{% trans %}TitleMeeting{% endtrans %}</td>
                                    <td>{{ meeting.title }}</td>
                                </tr>
                                <tr>
                                    <td>{% trans %}DescriptionMeeting{% endtrans %}</td>
                                    <td>{{ meeting.description }} </td>
                                </tr>
                            </table>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>

    </section>
{% endblock %}
