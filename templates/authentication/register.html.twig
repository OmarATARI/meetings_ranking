{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <section id="intro">
        <div class="intro-container wow fadeIn">


            {{ form_start(form) }}
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    {{ form_row(form.firstName, {label_attr: {class: 'form-group form-control'} }) }}
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_row(form.lastName, {label_attr: {class: 'form-group form-control'} }) }}
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_row(form.email, {label_attr: {class: 'form-group form-control'} }) }}
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    {{ form_row(form.username, {label_attr: {class: 'form-group form-control'} }) }}
                </div>
                <div class="col-md-3 mb-3">
                    {{ form_row(form.password.first, {label_attr: {class: 'form-group form-control'} }) }}
                </div>
                <div class="col-md-6 mb-2">
                    {{ form_row(form.password.second, {label_attr: {class: 'form-group form-control'} }) }}
                </div>

        </div>
            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}


