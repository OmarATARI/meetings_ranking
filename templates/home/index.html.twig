{% extends 'base.html.twig' %}

{% block title %}Welcome !{% endblock %}

{% block body %}

    <section id="intro">
        <div class="intro-container wow fadeIn">
            <h1 class="mb-4 pb-0">Rate and share your best <br><span>Meetings</span></h1>
        </div>
    </section>

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2>List of meetings</h2>
                    <ul>
                        {% for Meeting in allMeetings %}
                            <li>
                                {{ Meeting.title }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-lg-3">


                    {{ knp_pagination_render(allMeetings) }}

                </div>
            </div>
        </div>
    </section>


<section id="schedule" class="section-with-bg">
    <div class="container wow fadeInUp">


        <h3 class="sub-heading">List Of Meeting</h3>

        <div class="tab-content row justify-content-center">

            <!-- Schdule Day 1 -->
            <div role="tabpanel" class="col-lg-9 tab-pane fade show active" id="day-1">
                {% for Meeting in allMeetings %}
                <div class="row schedule-item">

                    <div class="col-md-10">
                        <h4>{{ Meeting.title }}</h4>
                        <p>{{ Meeting.description }}</p>
                    </div>

            </div>
                {% endfor %}
        </div>
    </div>
</section>




{% endblock %}
