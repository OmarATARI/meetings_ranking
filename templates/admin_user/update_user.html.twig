{% extends 'base.html.twig' %}

{% block title %}Welcome !{% endblock %}

{% block body %}
    <section id="intro">
        <div class="intro-container wow fadeIn">
            <h1 class="mb-4 pb-0"> modif<br><span>user</span></h1>
        </div>
    </section>

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.firstName,'Ta description', {label_attr: {class: 'form-group form-control'} }) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.lastName,'Ta description', {label_attr: {class: 'form-group form-control'} }) }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email,'Ta description', {label_attr: {class: 'form-group form-control'} }) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                {{ form_row(form.submit, {label_attr: {class: 'form-check-label'} }) }}
                    </div>
                {{ form_end(form) }}

                </div>
            </div>
        </div>
    </section>
{% endblock %}